---
import Toc from "../components/Toc.astro";
import "../styles/global.css";
import { Font } from "astro:assets";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO Meta Tags -->
    <title>Carlos Ferreras - Desarrollador Frontend</title>
    <meta name="description" content="Portfolio de Carlos Ferreras, desarrollador frontend especializado en React, Vue y Astro. Creando experiencias web modernas y profesionales." />
    <meta name="keywords" content="Carlos Ferreras, desarrollador frontend, React, Vue, Astro, JavaScript, TypeScript, desarrollo web, portfolio" />
    <meta name="author" content="Carlos Ferreras" />
    <meta name="robots" content="index, follow" />
    
    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content="Carlos Ferreras - Desarrollador Frontend" />
    <meta property="og:description" content="Portfolio de Carlos Ferreras, desarrollador frontend especializado en React, Vue y Astro. Creando experiencias web modernas y profesionales." />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://carlosferreras.com" />
    <meta property="og:site_name" content="Carlos Ferreras Portfolio" />
    <meta property="og:locale" content="es_ES" />
    
    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content="Carlos Ferreras - Desarrollador Frontend" />
    <meta name="twitter:description" content="Portfolio de Carlos Ferreras, desarrollador frontend especializado en React, Vue y Astro." />
    
    <!-- Additional SEO -->
    <meta name="theme-color" content="#1F2937" />
    <link rel="canonical" href="https://carlosferreras.com" />
    
    <!-- Structured Data -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Person",
      "name": "Carlos Ferreras",
      "jobTitle": "Desarrollador Frontend",
      "description": "Desarrollador frontend especializado en React, Vue y Astro. Creando experiencias web modernas y profesionales.",
      "url": "https://carlosferreras.com",
      "sameAs": [
        "https://github.com/cferreras",
        "https://www.linkedin.com/in/carlos-ferreras/"
      ],
      "email": "carlos@carlosferreras.com",
      "knowsAbout": ["React", "Vue", "Astro", "JavaScript", "TypeScript", "Frontend Development"],
      "worksFor": {
        "@type": "Organization",
        "name": "Freelance"
      }
    }
    </script>
    
    <Font cssVariable="--font-inter" preload />
  </head>
  <body class="antialiased bg-gray-900 text-white min-h-screen">
    <div class="max-w-6xl mx-auto px-6 py-12">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
        <!-- Sidebar izquierdo -->
        <div class="lg:sticky lg:top-12 lg:h-fit">
          <div class="flex flex-col lg:min-h-[78vh]">
            <div class="space-y-8 flex-grow">
              <div>
                <h1 class="text-3xl font-bold text-white mb-2">
                  Carlos Ferreras
                </h1>
                <h2 class="text-lg text-gray-300 mb-4">
                  Desarrollador Frontend
                </h2>
                <p class="text-gray-400 leading-relaxed">
                  Especializado en crear experiencias web modernas con React, Vue y Astro.
                </p>
              </div>
              <Toc />
            </div>
            
            <!-- Enlaces sociales -->
            <div class="flex space-x-4 mt-4 lg:mt-6">
              <a 
                href="https://github.com/cferreras" 
                target="_blank" 
                rel="noopener noreferrer"
                class="text-gray-400 hover:text-white transition-colors"
