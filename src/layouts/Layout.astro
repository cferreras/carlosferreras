---
import Toc from "../components/Toc.astro";
import "../styles/global.css";
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Google Fonts: Outfit -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <!-- SEO Meta Tags -->
    <title>Carlos Ferreras - Desarrollador Frontend</title>
    <meta
      name="description"
      content="Portfolio de Carlos Ferreras, desarrollador frontend especializado en React, Vue y Astro. Creando experiencias web modernas y profesionales."
    />
    <meta
      name="keywords"
      content="Carlos Ferreras, desarrollador frontend, React, Vue, Astro, JavaScript, TypeScript, desarrollo web, portfolio"
    />
    <meta name="author" content="Carlos Ferreras" />
    <meta name="robots" content="index, follow" />

    <!-- Open Graph Meta Tags -->
    <meta
      property="og:title"
      content="Carlos Ferreras - Desarrollador Frontend"
    />
    <meta
      property="og:description"
      content="Portfolio de Carlos Ferreras, desarrollador frontend especializado en React, Vue y Astro. Creando experiencias web modernas y profesionales."
    />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://carlosferreras.com" />
    <meta property="og:site_name" content="Carlos Ferreras Portfolio" />
    <meta property="og:locale" content="es_ES" />

    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta
      name="twitter:title"
      content="Carlos Ferreras - Desarrollador Frontend"
    />
    <meta
      name="twitter:description"
      content="Portfolio de Carlos Ferreras, desarrollador frontend especializado en React, Vue y Astro."
    />

    <!-- Additional SEO -->
    <meta name="theme-color" content="#0a192f" />
    <link rel="canonical" href="https://carlosferreras.com" />

    <!-- Structured Data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Carlos Ferreras",
        "jobTitle": "Desarrollador Frontend",
        "description": "Desarrollador frontend especializado en React, Vue y Astro. Creando experiencias web modernas y profesionales.",
        "url": "https://carlosferreras.com",
        "sameAs": [
          "https://github.com/cferreras",
          "https://www.linkedin.com/in/carlos-ferreras/"
        ],
        "email": "carlos@carlosferreras.com",
        "knowsAbout": [
          "React",
          "Vue",
          "Astro",
          "JavaScript",
          "TypeScript",
          "Frontend Development"
        ],
        "worksFor": {
          "@type": "Organization",
          "name": "Freelance"
        }
      }
    </script>
  </head>
  <body
    class="antialiased bg-navy-900 text-slate-light leading-relaxed selection:bg-teal-300/30 selection:text-teal-300"
  >
    <!-- Spotlight Effect Background -->
    <div
      class="pointer-events-none fixed inset-0 z-30 transition duration-300"
      id="spotlight"
    >
    </div>

    <div
      class="mx-auto min-h-screen max-w-screen-xl px-6 py-12 font-sans md:px-12 md:py-20 lg:px-24 lg:py-0"
    >
      <div class="lg:flex lg:justify-between lg:gap-4">
        <!-- Sidebar izquierdo -->
        <header
          class="lg:sticky lg:top-0 lg:flex lg:max-h-screen lg:w-1/2 lg:flex-col lg:justify-between lg:py-24"
        >
          <div>
            <h1
              class="text-4xl font-bold tracking-tight text-white-off sm:text-5xl"
            >
              <a href="/">Carlos Ferreras</a>
            </h1>
            <h2
              class="mt-3 text-lg font-medium tracking-tight text-white-off sm:text-xl"
            >
              Desarrollador Frontend
            </h2>
            <p class="mt-4 max-w-xs leading-normal text-slate-light">
              Especializado en crear experiencias web modernas, accesibles y de
              alto rendimiento.
            </p>

            <Toc />
          </div>

          <!-- Enlaces sociales -->
          <ul class="ml-1 mt-8 flex items-center" aria-label="Social media">
            <li class="mr-5 text-xs shrink-0">
              <a
                class="block hover:text-white-off transition-colors"
                href="https://github.com/cferreras"
                target="_blank"
                rel="noreferrer noopener"
                aria-label="GitHub (opens in a new tab)"
                title="GitHub"
              >
                <span class="sr-only">GitHub</span>
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 16 16"
                  fill="currentColor"
                  class="h-6 w-6"
                  aria-hidden="true"
                  ><path
                    d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z"
                  ></path></svg
                >
              </a>
            </li>
            <li class="mr-5 text-xs shrink-0">
              <a
                class="block hover:text-white-off transition-colors"
                href="https://www.linkedin.com/in/carlos-ferreras/"
                target="_blank"
                rel="noreferrer noopener"
                aria-label="LinkedIn (opens in a new tab)"
                title="LinkedIn"
              >
                <span class="sr-only">LinkedIn</span>
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 24 24"
                  fill="currentColor"
                  class="h-6 w-6"
                  aria-hidden="true"
                  ><path
                    d="M20.5 2h-17A1.5 1.5 0 002 3.5v17A1.5 1.5 0 003.5 22h17a1.5 1.5 0 001.5-1.5v-17A1.5 1.5 0 0020.5 2zM8 19H5v-9h3zM6.5 8.25A1.75 1.75 0 118.3 6.5a1.78 1.78 0 01-1.8 1.75zM19 19h-3v-4.74c0-1.42-.6-1.93-1.38-1.93A1.74 1.74 0 0013 14.19a.6.6 0 000 .14V19h-3v-9h2.9v1.3a3.11 3.11 0 012.7-1.4c1.55 0 3.36.86 3.36 3.66z"
                  ></path></svg
                >
              </a>
            </li>
            <li class="mr-5 text-xs shrink-0">
              <a
                class="block hover:text-white-off transition-colors"
                href="https://discordapp.com/users/962633624744755252"
                target="_blank"
                rel="noreferrer noopener"
                aria-label="Discord (opens in a new tab)"
                title="Discord"
              >
                <span class="sr-only">Discord</span>
                <svg
                  class="w-6 h-6"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                  aria-hidden="true"
                >
                  <path
                    d="M20.317 4.3698a19.7913 19.7913 0 00-4.8851-1.5152.0741.0741 0 00-.0785.0371c-.211.3753-.4447.8648-.6083 1.2495-1.8447-.2762-3.68-.2762-5.4868 0-.1636-.3933-.4058-.8742-.6177-1.2495a.077.077 0 00-.0785-.037 19.7363 19.7363 0 00-4.8852 1.515.0699.0699 0 00-.0321.0277C.5334 9.0458-.319 13.5799.0992 18.0578a.0824.0824 0 00.0312.0561c2.0528 1.5076 4.0413 2.4228 5.9929 3.0294a.0777.0777 0 00.0842-.0276c.4616-.6304.8731-1.2952 1.226-1.9942a.076.076 0 00-.0416-.1057c-.6528-.2476-1.2743-.5495-1.8722-.8923a.077.077 0 01-.0076-.1277c.1258-.0943.2517-.1923.3718-.2914a.0743.0743 0 01.0776-.0105c3.9278 1.7933 8.18 1.7933 12.0614 0a.0739.0739 0 01.0785.0095c.1202.099.246.1981.3728.2924a.077.077 0 01-.0066.1276 12.2986 12.2986 0 01-1.873.8914.0766.0766 0 00-.0407.1067c.3604.698.7719 1.3628 1.225 1.9932a.076.076 0 00.0842.0286c1.961-.6067 3.9495-1.5219 6.0023-3.0294a.077.077 0 00.0313-.0552c.5004-5.177-.8382-9.6739-3.5485-13.6604a.061.061 0 00-.0312-.0286zM8.02 15.3312c-1.1825 0-2.1569-1.0857-2.1569-2.419 0-1.3332.9555-2.4189 2.157-2.4189 1.2108 0 2.1757 1.0952 2.1568 2.419-.0190 1.3332-.9555 2.4189-2.1569 2.4189zm7.9748 0c-1.1825 0-2.1569-1.0857-2.1569-2.419 0-1.3332.9554-2.4189 2.1569-2.4189 1.2108 0 2.1757 1.0952 2.1568 2.419 0 1.3332-.9460 2.4189-2.1568 2.4189z"
                  ></path>
                </svg>
              </a>
            </li>
            <li class="mr-5 text-xs shrink-0">
              <a
                class="block hover:text-white-off transition-colors"
                href="mailto:carlos@carlosferreras.com"
                aria-label="Email"
                title="Email"
              >
                <span class="sr-only">Email</span>
                <svg
                  class="w-6 h-6"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                  aria-hidden="true"
                >
                  <path
                    d="M1.5 8.67v8.58a3 3 0 003 3h15a3 3 0 003-3V8.67l-8.928 5.493a3 3 0 01-3.144 0L1.5 8.67z"
                  ></path>
                  <path
                    d="M22.5 6.908V6.75a3 3 0 00-3-3h-15a3 3 0 00-3 3v.158l9.714 5.978a1.5 1.5 0 001.572 0L22.5 6.908z"
                  ></path>
                </svg>
              </a>
            </li>
          </ul>
        </header>

        <!-- Contenido principal -->
        <main class="pt-24 lg:w-1/2 lg:py-24">
          <slot />
        </main>
      </div>
    </div>

    <script>
      const spotlight = document.getElementById("spotlight");
      if (spotlight) {
        window.addEventListener("mousemove", (e) => {
          const { clientX, clientY } = e;
          spotlight.style.background = `radial-gradient(600px at ${clientX}px ${clientY}px, rgba(29, 78, 216, 0.15), transparent 80%)`;
        });
      }
    </script>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    font-family: var(--font-sans), sans-serif;
  }
</style>
